      <br><br>
      <table>
        <tr>
          <td> Organisation</td>
          <td> {{details.orgName}}</td>
        </tr>
        <tr>
          <td> No. of Students</td>
          <td> {{details.strength}}</td>
        </tr>
        <tr>
          <td> Enquirer</td>
          <td> {{details.name}}</td>
        </tr>
        <tr>
          <td> Designation</td>
          <td> {{details.role}}</td>
        </tr>
        <tr>
          <td> Phone</td>
          <td> {{details.phone}}</td>
        </tr>
        <tr>
          <td> Email</td>
          <td> {{details.email}}</td>
        </tr>
        <tr>
          <td> Country</td>
          <td> {{details.country}}</td>
        </tr>
      </table>

    <br />
    <br />
    </div>


  </div>
    <img src="cid:bottom_border@2x" width="100%">
</div>

